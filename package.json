{
  "name": "monad-card-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "homepage": "https://songnestle.github.io/monad-card-game",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "vite preview --port 4173",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "lighthouse": "lighthouse http://localhost:5173/ --output html --output-path lighthouse-report.html --chrome-flags=\"--headless\"",
    "complete-test": "./run-complete-tests.sh",
    "test:full": "npm run complete-test",
    "compile": "hardhat compile",
    "deploy:localhost": "hardhat run scripts/deploy.js --network localhost",
    "deploy:testnet": "hardhat run scripts/deploy.js --network monadTestnet",
    "node": "hardhat node"
  },
  "dependencies": {
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "ethers": "^6.13.5",
    "express": "^5.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@playwright/test": "^1.54.2",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "dotenv": "^16.6.1",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "gh-pages": "^6.3.0",
    "globals": "^15.15.0",
    "hardhat": "^2.26.2",
    "vite": "^6.2.0"
  }
}
